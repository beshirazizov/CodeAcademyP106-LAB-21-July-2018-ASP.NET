@using FinalPro.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.error != null)
{
    <div class="alert alert-danger" style="margin:20px">
        <p>@ViewBag.error</p>
    </div>
}
@if (ViewBag.succ != null)
{
    <div class="alert alert-success" style="margin:20px">
        <p>@ViewBag.succ</p>
    </div>
}
<div style="margin:50px; width:400px;">
    <form method="post">
        <div class="form-group">
            <input type="text" name="name" class="form-control" id="name" placeholder="Book name">
        </div>
        <div class="form-group">
            <select id="author" name="author" class="form-control">
                <option selected>Select Author ...</option>
                @foreach (Author au in ViewBag.Authors)
                {
                    <option>@au.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="text" name="description" class="form-control" id="description" placeholder="Description">
        </div>
        <div class="form-group">
            <input type="number" name="quantity" class="form-control" id="quantity" placeholder="Quantity">
        </div>
        <button type="submit" class="btn btn-primary">Add Book</button>
    </form>
</div>

